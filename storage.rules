rules_version = '2';

// ====================================================================
// FIREBASE STORAGE RULES - BASIC VERSION (Development Mode)
// ====================================================================
//
// ACHTUNG: Diese Rules sind OFFEN für alle!
// OK für interne Nutzung, NICHT für öffentliche Apps!
//
// DEPLOYMENT:
// firebase deploy --only storage:rules
//
// ====================================================================

service firebase.storage {
  match /b/{bucket}/o {

    // Alle Zugriffe erlaubt (Development Mode)
    match /{allPaths=**} {
      allow read, write: if true;
    }

  }
}

// ====================================================================
// HINWEISE:
// ====================================================================
//
// Diese Rules sind für INTERNE Nutzung optimiert:
// - Keine Authentication erforderlich
// - Keine Größen-Limits
// - Schnell & einfach
//
// Optional: Größenlimits hinzufügen (empfohlen)
// allow write: if request.resource.size < 10 * 1024 * 1024; // Max 10 MB
//
// ====================================================================
